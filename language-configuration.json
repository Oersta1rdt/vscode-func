{
    "comments": {
        // (since FunC v0.5.0, Lisp-style comments were replaced to traditional ones)
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "wordPattern": "(`.*`)|([a-zA-Z_$%](\\w|['?:$%])+)|([$%a-zA-Z])",
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
    ]
}